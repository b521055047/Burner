<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <RadioButton
            android:text="Male"
            android:id="@+id/maleRadioButton"
            android:checked="true"
            android:layout_alignParentTop="true" />

        <RadioButton
            android:text="Female"
            android:id="@+id/femaleRadioButton"
            android:checked="false"
            android:layout_below="@+id/maleRadioButton" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender"
        android:id="@+id/genderTextView"
        android:layout_toStartOf="@+id/genderRadioGroup"
        android:layout_alignTop="@+id/genderRadioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Age"
        android:id="@+id/ageLabel"
        android:layout_toStartOf="@+id/genderRadioGroup"
        android:layout_below="@+id/genderRadioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Height"
        android:id="@+id/heightLabel"
        android:layout_toStartOf="@+id/genderRadioGroup"
        android:layout_below="@+id/ageLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weight"
        android:id="@+id/weightLabel"
        android:layout_toStartOf="@+id/genderRadioGroup"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="25"
        android:id="@+id/myAge"
        android:layout_toEndOf="@+id/myWeight"
        android:layout_above="@+id/heightLabel"
        android:layout_alignLeft="@+id/myHeight"
        android:layout_alignStart="@+id/myHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="175"
        android:id="@+id/myHeight"
        android:layout_toEndOf="@+id/myWeight"
        android:layout_alignBottom="@+id/heightLabel"
        android:layout_alignLeft="@+id/myWeight"
        android:layout_alignStart="@+id/myWeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="25"
        android:id="@+id/myWeight"
        android:layout_toEndOf="@+id/weightLabel"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/weightLabel"
        android:layout_marginLeft="27dp" />

</RelativeLayout>
